{
  "openapi": "3.0.0",
  "info": {
    "title": "Teste",
    "description": "Teste",
    "version": "1.0"
  },
  "tags": [
    {
      "name": "users",
      "description": "Usuarios"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Criar usuario",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Teste",
                  "email": "teste@teste"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cadastrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "10",
                    "name": "Teste",
                    "email": "teste@teste",
                    "created_at": "2022-04-12T20:00:00.759Z",
                    "updated_at": "2022-04-12T20:00:00.759Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "email repetido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "usuario ja existe."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Listar usuarios",
        "description": "voce nao Ã© um usuario adminstrador",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": [
                      {
                        "admin": true,
                        "id": "11",
                        "name": "Teste",
                        "email": "teste@teste",
                        "created_at": "2022-04-12T20:00:00.759Z",
                        "updated_at": "2022-04-12T20:00:00.759Z"
                        },
                      {
                        "admin": false,
                        "id": "12",
                        "name": "salmi",
                        "email": "salmi@mail.com",
                        "created_at": "2022-04-12T20:00:00.759Z",
                        "updated_at": "2022-04-12T20:00:00.759Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "usuario nao encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "acesso apenas para adminstradores"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Mostrar usuario.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "13",
                    "name": "luiz",
                    "email": "luiz@mail.com",
                    "created_at": "2022-04-12T20:00:00.759Z",
                    "updated_at": "2022-04-12T20:00:00.759Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "user not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "user not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "admin update for user",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Feito!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": true,
                    "id": "15",
                    "name": "joao",
                    "email": "joao@mail.com",
                    "created_at": "2022-04-12T20:00:00.759Z",
                    "updated_at": "2022-04-12T20:00:00.759Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "user not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "user not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}